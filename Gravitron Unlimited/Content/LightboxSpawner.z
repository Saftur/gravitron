class LightboxSpawner : ZilchComponent
{
    [Property]
    var Active : Boolean = true;
    [Property]
    var LightboxType : Archetype = Archetype.LightBox;
    [Property]
    var Lightboxdisplace : Real3 = Real3();
    
    function Initialize(init : CogInitializer)
    {
        if(this.Active)
        {
            var spawnPos = this.Owner.Transform.Translation;
            this.Space.CreateAtPosition(this.LightboxType, spawnPos - this.Lightboxdisplace);
        }
    }
}
